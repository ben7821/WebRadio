{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="register">
        <h1 class="display-full">Enregistrer un utilisateur</h1>

        {{ form_errors(registrationForm) }}

        {{ form_start(registrationForm) }}
            <div class="register-username">
                {{ form_row(registrationForm.username, { 'label': "Nom de l'utilisateur", 'attr': {'class': 'form-control'} }) }}
            </div>

            <div class="register-password">
                {{ form_row(registrationForm.plainPassword, {
                    'label': 'Mot de passe',
                    'attr': {'class': 'form-control'}
                }) }}
            </div>

            <div class="register-role">
                {{form_row(registrationForm.role,{
                    'label': 'Role',
                    'attr' : {'class': ''}
                    }) }}
            </div>

            <div class="register-terms">
                {{ form_row(registrationForm.agreeTerms, { 'label': "Accepter les conditions d'utilisation :", 'attr': {'class': 'form-check-input'} }) }}
            </div>

            <button type="submit" class="register-btn">S'enregistrer</button>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
