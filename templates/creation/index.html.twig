{% extends 'base.html.twig' %}

{% block title %}Hello CreationController!{% endblock %}

{% block body %}
    <h1>Emissions</h1>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>NOM</th>
                <th>NOMLONG</th>
                <th>DESCRIPTION</th>
                <th>IMG</th>
                <th>INSCRIPTION</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for emission in emissions %}
            <tr>
                <td>{{ emission.ID }}</td>
                <td>{{ emission.NOM }}</td>
                <td>{{ emission.NOMLONG }}</td>
                <td>{{ emission.DESCRIPTION }}</td>
                <td>{{ emission.IMG }}</td>
                <td>{{ emission.INSCRIPTION ? 'Yes' : 'No' }}</td>
                <td>
                <a href="{{ path('app_creation_show', {'ID': emission.ID}) }}">select</a>
                    <a href="{{ path('app_emission_show', {'ID': emission.ID}) }}">show</a>
                    <a href="{{ path('app_emission_edit', {'ID': emission.ID}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_emission_new') }}">Create new</a>

        <h1>Audios</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NOM</th>
                <th>DESCRIPTION</th>
                <th>HEURE</th>
                <th>DATE</th>
                <th>AUDIO</th>
                <th>AUTEURS</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for audio in audios %}
            <tr>
                <td>{{ audio.id }}</td>
                <td>{{ audio.NOM }}</td>
                <td>{{ audio.DESCRIPTION }}</td>
                <td>{{ audio.HEURE ? audio.HEURE|date('H:i:s') : '' }}</td>
                <td>{{ audio.DATE ? audio.DATE|date('Y-m-d') : '' }}</td>
                <td>{{ audio.AUDIO }}</td>
                <td>{{ audio.AUTEURS }}</td>
                <td>
                    <a href="{{ path('app_audio_show', {'id': audio.id}) }}">show</a>
                    <a href="{{ path('app_audio_edit', {'id': audio.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_audio_new') }}">Create new</a>
{% endblock %}
