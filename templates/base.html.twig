<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link
		rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body>
		{% block nav %}
			<header>
				<!-- logo -->
				<a href="{{ path('app_home') }}"><img src="Logo" alt="WebRadio" class="logo"/></a>
				<!-- navbar header -->
				<div
					class="headright">
					<!-- emission btn -->
					<div class="dropdown">
						<a href="{{ path('app_emission_index') }}">EMISSIONS</a>
						<div
							class="dropdown-content">{# {% for ems in emissions %}
																	<a href="{{ path('app_emission_index/') }}"></a>
															    {% endfor %} #}
						</div>
					</div>
					<!-- journal btn -->
					<a href="">JOURNAL</a>
					<!-- equipe btn -->
					<div class="dropdown">
						<a href="">L'EQUIPE</a>
						<div class="dropdown-content">
							<a href="">Le Lycée</a>
							<a href="">Les Membres</a>
						</div>
					</div>
				</div>
			</header>
		{% endblock %}

		{% block body %}{% endblock %}
	</body>
	<footer>
		{% block footer %}
			<a href="{{ path('app_home') }}">
				<img src="Logo.png" alt="Logo" class="logo-footer"/></a>
			<h4>A propos</h4>
			<div class="footer-element">
				<ul>
					<!-- LISTE DE TOUTES LES PAGES DU FOOTER -->
					<li>
						<a href="contact">- Contact</a>
					</li>
					<li>
						<a href="plan">- Plan du site</a>
					</li>
					<li>
						<a href="mentions">- Mentions Legales</a>
					</li>
				</ul>
			</div>
		{% endblock %}
	</footer>
</html>
